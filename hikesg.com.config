# www.hikesg.com 配置
server {
    listen 80;
    server_name www.hkiesg.com;

    access_log /var/log/nginx/hkiesg.access.log;
    error_log /var/log/nginx/hkiesg.error.log;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

# en.hikesg.com 配置
server {
    listen 80;
    server_name en.hkiesg.com;

    access_log /var/log/nginx/hkiesg_en.access.log;
    error_log /var/log/nginx/hkiesg_en.error.log;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

# 如果需要 HTTPS，这里是带 SSL 的配置
server {
    listen 443 ssl;
    server_name www.hkiesg.com;

    ssl_certificate /data/hkiesg/cert/public.pem;
    ssl_certificate_key /data/hkiesg/cert/private.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on; 
}

server {
    listen 443 ssl;
    server_name en.hkiesg.com;

    ssl_certificate /data/hkiesg/cert/public.pem;
    ssl_certificate_key /data/hkiesg/cert/private.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on; 
}

# HTTP 重定向到 HTTPS（如果需要的话）
server {
    listen 80;
    server_name www.hikesg.com en.hikesg.com;
    return 301 https://$server_name$request_uri;
}